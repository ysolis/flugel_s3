{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadGetObject",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "${arn}",
        "${arn}/*"
      ],
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": [
            %{for ip in ip_node_list ~}
            "${ip.private_ip}/32",
            %{endfor ~}
            "${first_node_ip}/32"
          ]
        }
      }
    }
  ]
}
